<%= render("layouts/errors", :object => @message) %>

<%= form_for @message, remote: true do |f| %>
  <form class="form-horizontal" role="form">
    <div class="form-group">

    <% Contact.all.each do |contact| %>
        <%= check_box_tag "message[to][]", contact.number %>
        <%= label :to, contact.name %><br>
    <% end %>

    </div>
    <div class="form-group">
    <%= f.label :from, "Message from:" %><br>
    <%= f.text_field :from %><br>
    </div>
    <div class="form-group">
    <%= f.label :body, "Your message" %><br>
    <%= f.text_area :body, size: '24x6' %><br>
    </div>
    <%= f.submit(:class => "btn btn-primary") %>
  </form>
<% end %>


